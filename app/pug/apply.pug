extends ./share/container.pug
block config
    - var title = '借阅申请';
    - var keywords = '借阅申请';
    - var description = '借阅申请';
    - var currentId = 'apply';
    - var pageCss = 'apply';
    - var headerText = '借阅申请';
block css
    link(rel="stylesheet" href="./css/mobiscroll.css")
    link(rel="stylesheet" href="./css/mobiscroll_date.css")
block append main
        #main
            form(action="#" method="post")
                .item
                    i.i_logo
                    input.select(placeholder='门店选择' disabled="disabled")
                    img.i_select(src=imgUrl+"i-select.png", alt="")
                    ul.select_dropdown
                        li(data-value="test") 测试
                .item
                    i.i_logo
                    input#USER_AGE.select(placeholder='借阅日期')
                    img.i_select(src=imgUrl+"i-select.png", alt="")
                .item
                    i.i_logo
                    input.select(placeholder='借阅人')
                .item
                    i.i_logo
                    input.select(placeholder='手机号')
                input#submit(type="submit")

block append js
    script(src="js/mobiscroll_date.js")
    script(src="js/mobiscroll.js")
    script.
        $(function(){
            $('.item').click(function(){
                $(this).children(".select_dropdown").fadeToggle(200);
            })
            $('.select_dropdown li').click(function(){
                var data = $(this).data('value');
                console.log(data);
                $(this).parent().siblings(".select").val(data);
            })

            var currYear = (new Date()).getFullYear();	
            var opt={};
            opt.date = {preset : 'date'};
            opt.datetime = {preset : 'datetime'};
            opt.time = {preset : 'time'};
            opt.default = {
                theme: 'android-ics light', //皮肤样式
                display: 'modal', //显示方式 
                mode: 'scroller', //日期选择模式
                dateFormat: 'yyyy-mm-dd',
                lang: 'zh',
                showNow: true,
                nowText: "今天",
                startYear: currYear - 50, //开始年份
                endYear: currYear + 10 //结束年份
            };

            $("#USER_AGE").mobiscroll($.extend(opt['date'], opt['default']));
        })